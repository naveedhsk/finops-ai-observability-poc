# FinOps AI Observability POC Configuration

# Data Settings
DATA_PATH=data/aws_costs.csv
DATE_COLUMN=date
COST_COLUMN=cost

# ML Detection Settings
ANOMALY_THRESHOLD=2.5
LOOKBACK_DAYS=30
MODEL_TYPE=isolation_forest  # Options: isolation_forest, statistical

# Alerting Settings
ALERT_ENABLED=true
ALERT_THRESHOLD_USD=500
SLACK_WEBHOOK_URL=  # Optional: Add your Slack webhook for real alerts

# Observability Settings
OTEL_SERVICE_NAME=finops-ai-detector
PROMETHEUS_PORT=9090
METRICS_PORT=8000

# Application Settings
LOG_LEVEL=INFO
ENVIRONMENT=development
